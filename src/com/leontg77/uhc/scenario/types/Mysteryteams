options:
        P: &8[&cParanoia&8]&f
 
 
 
 
command /paranoia <text>:
        usage: /paranoia <enable | disable>
        permission: paranoia.admin
        permission message: {@P} Missing Permission! &o(paranoia.admin)
        trigger:
                if arg 1 is "enable":
                        set {paranoia} to true
                        broadcast "{@P} Paranoia &2enabled &fby &e%command sender%"
                if arg 1 is "disable":
                        delete {paranoia}
                        broadcast "{@P} Paranoia &cdisabled &fby &e%command sender%"
 
 
#=============#
#=Paranoia=#
#=============#
 
on mine of diamond ore:
        {paranoia} is true:
                broadcast "{@P} &e%player% &fmined &bDiamond &fOre at %location of player%!"
 
on mine of gold ore:
        {paranoia} is true:
                broadcast "{@P} &e%player% &fmined &6Gold &fOre at %location of player%!"
 
 
on craft of anvil:
        {paranoia} is true:
                broadcast "{@P} &e%player% &fcrafted an &7Anvil &fat %location of player%!"
 
on craft of enchantment table:
        {paranoia} is true:
                broadcast "{@P} &e%player% &fcrafted an &2Enchantment Table &fat %location of player%!"
 
 
on consume of golden apple:
        {paranoia} is true:
                broadcast "{@P} &e%player% &fate a &6Golden Apple &fat %location of player%!"
 
 
 
on craft of golden apple:
        {paranoia} is true:
                broadcast "{@P} &e%player% &fcrafted a &6Golden Apple &fat %location of player%!"
 
 
on death of player:
        {paranoia} is true:
                broadcast "{@P} &e%player% &4died &fat %location of player%!"